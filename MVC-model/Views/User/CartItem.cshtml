@{
    Layout = "_LayoutUser";
}
@model UserCartIndex

<section class="py-5">
    <div class="card">
        <div class="card-body" style="background: white">
            <div class="row">
                <div class="col-md-12 table-responsive-md">
                    @*<a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create"> New Employee</a>*@
                    <table class="table table-strip table" style="color: black;">

                        <thead>
                            <tr>
                                <th>Product name</th>
                                <th>Quantity</th>
                                <th>Product price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listItem)
                            {
                                <tr>
                                    <td>@item.productName</td>
                                    <td>@item.quantity</td>
                                    <td>$@item.productPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @*<div class="form-group">*@
                <span class=" btn btn-primary btn-lg" type="submit" style="width:40%;margin-left: 2rem;">
                        <a class="nav-link" asp-controller="Payment" asp-action="Create" style="color: white">Continue to checkout</a>
                    </span>
                    <br />
                <span class="btn btn-primary btn-lg" type="submit" style="width:40%;margin-left: 14rem">
                        <a class="nav-link" asp-controller="Product" asp-action="Product" style="color: white">Back</a>
                    </span>

                    <br />
                    <br />
                @*</div>*@
            </div>
        </div>
        
