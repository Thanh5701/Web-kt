@{
    Layout = "_LayoutUser";
}
@model UserCartIndex

<section class="py-5">
    <div class="card">
        <div class="card-body" style="background: white">
            <div class="row">
                <div class="col-md-12 table-responsive-md">
                    @*<a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create"> New Employee</a>*@
                    <table class="table table-strip table" style="color: black;">

                        <thead>
                            <tr>
                                <th>Product name</th>
                                <th>Quantity</th>
                                <th>Product price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listItem)
                            {
                                <tr>
                                    <td>@item.productName</td>
                                    <td>@item.quantity</td>
                                    <td>$@item.productPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="form-group">
            

            <button type="submit" class="btn btn-rounded btn-primary float-left">
                <i asp-controller="Payment" asp-action="Create" class="fas fa-plus-square" style="margin-right:0.7em"></i>Save
            </button>

            <a asp-controller="Product" asp-action="Product" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            <br />
            <br />
            <br />

        </div>
