@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model IEnumerable<IndexProductViewModel>

<div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.discountPercentage%</div>
                    <img alt="image" src="@Url.Content(item.imgURL)" style="height: 13rem;">
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="card-title">@item.productName</h5>
                            <p>@item.brand</p>
                            <p>$@item.price</p>
                            <div class="col-3 form-group">
                        </div>
                        </div>
                    </div>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <form asp-action="AddToCart" asp-route-id="@item.productID" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="submit" value="Add To Cart" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col">
            <div class="card h-100">
                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">50%</div>
                <img src="~/images/Dotabg.jpg" class="card-img-top" alt="...">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="card-title">Card title</h5>
                        <p>Adidas</p>
                        <p>$20</p>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-white mt-auto" href="#">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="~/images/Dotabg.jpg" class="card-img-top" alt="...">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="card-title">Card title</h5>
                        <p>Adidas</p>
                        <p>$20</p>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-white mt-auto" href="#">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="~/images/Dotabg.jpg" class="card-img-top" alt="...">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="card-title">Card title</h5>
                        <p>Adidas</p>
                        <p>$20</p>

                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-white mt-auto" href="#">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center" style="padding-top: 2rem;">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
