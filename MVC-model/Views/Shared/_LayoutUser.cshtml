@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/carousel.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body>
    <header class="p-3 text-bg-dark" style="background-color: #2b80ff !important;">
        <div id="userHomePage" class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="~/images/Dotabg.jpg" alt="logo" width="120" height="60">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-controller="User" asp-action="Home" class="nav-link px-2 text-white">Home</a></li>
                    <li><a href="#carouselExampleInterval" class="nav-link px-2 text-white">Introduce</a></li>
                    <li><a href="#about" class="nav-link px-2 text-white">About</a></li>
                    <li><a asp-controller="User" asp-action="Product" class="nav-link px-2 text-white">Product</a></li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a class="nav-link px-2 text-white" asp-controller="Home" asp-action="Index">Admin</a></li>
                    }
                </ul>
                

                <div class="text-end">
                    <button class="btn btn-outline-light me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><i class="fa-solid fa-cart-shopping fa-xl" style="color: #000000;"></i></button>

                    <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                        <div class="offcanvas-header">
                            <h5>Shopping Cart</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <table class="table table-strip table-dark">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>                             
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.paymentID</td>
                                            <td>@item.userID</td>
                                            <td>@item.method</td>
                                            <td>$@item.nameOnCard</td>
                                            <td>@item.cardNumber</td>
                                            <td>
                                                <a class="text-primary" asp-action="Edit" asp-route-id="@item.paymentID">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a class="text-success" asp-action="Detail" asp-route-id="@item.paymentID">
                                                    <i class="fas fa-bars"></i> Detail
                                                </a>
                                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.paymentID">
                                                    <i class="far fa-trash-alt"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }*@
                                    <tr>
                                        <td>Nike T-shirt</td>
                                        <td>2</td>
                                        <td>200$</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <button type="button" class="btn btn-outline-light me-2">
                            @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>*@
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user fa-xl" style="color: #ffffff;"></i></a>
                        </button>
                        
                        <a class="btn btn-warning btn-outline-light me-2">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "User", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-right-from-bracket fa-xl" style="color: #ffffff;"></i></button>
                            </form>
                        </a>
                        @*<button type="submit" class="btn btn-warning btn-outline-light me-2">
                            <a class="nav-link text-dark">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "User", new { area = "" })">
                                    <i class="fa-solid fa-right-from-bracket fa-xl" style="color: #ffffff;"></i>
                                </form>
                            </a>
                        </button>*@
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-light me-2">
                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </button>
                        <button type="button" class="btn btn-warning">
                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </button>
                    }
                </div>

            </div>
        </div>
    </header>
    <main>
        <div class="content-wra pper">
            @RenderBody()
        </div>

        <footer class="container">
            <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
                <p> &copy; @DateTime.UtcNow.Year - MVC_model - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><i class="fa-brands fa-facebook fa-xl" style="color: #000000;"></i></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><i class="fa-brands fa-github fa-xl" style="color: #000000;"></i></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook" /></svg></a></li>
                </ul>
            </div>
        </footer>
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

