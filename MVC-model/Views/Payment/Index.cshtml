@model IEnumerable<IndexPaymentViewModel>

@{
    Layout = "_Layout";
}

<div class="card">
    <div class="card-body" style="background: white">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Payment</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 table-responsive-md">
                @*<a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create"> New Employee</a>*@
                <table class="table table-strip table" style="color: black;">

                    <thead>
                        <tr>
                            <th>Payment Id</th>
                            <th>User Id</th>
                            <th>Method</th>
                            <th>Name on Card</th>
                            <th>Card Number</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.paymentID</td>
                                <td>@item.userID</td>
                                <td>@item.method</td>
                                @*<td>@item.inDate.ToShortDateString()</td>*@
                                <td>@item.nameOnCard</td>
                                <td>@item.cardNumber</td>
                                <td>
                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.paymentID">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.paymentID">
                                        <i class="fas fa-bars"></i> Detail
                                    </a>
                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.paymentID">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>