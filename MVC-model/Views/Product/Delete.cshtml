@{
    Layout = "_Layout";
}
@model DeleteProductViewModel
<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">All Product</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete Product</li>
            </ol>
        </nav>
        <div class="row">
            <form method="post" asp-action="Delete" enctype="multipart/form-data">

                <div class="col-md-12 table-responsive-md">
                    <div class="form-row">
                        <div class="col-2 form-group">
                            <label asp-for="@Model.productID" class="form-label"></label>
                        </div>
                        <div class="col-3 form-group">
                            <input asp-for="@Model.productID" class="form-control text-dark" readonly />
                            <span asp-validation-for="@Model.productID" class="text-danger"></span>
                        </div>
                        <div class="col-2 form-group"></div>
                        <div class="col-2 form-group">
                            <label asp-for="@Model.productName" class="form-label"></label>
                        </div>
                        <div class="col-3 form-group">
                            <input asp-for="@Model.productName" class="form-control text-dark" readonly />
                            <span asp-validation-for="@Model.productName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Delete</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}